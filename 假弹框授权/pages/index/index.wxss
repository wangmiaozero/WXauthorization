/**index.wxss**/
.i-header {
  height: 300rpx;
  background-color: white;
  text-align: center;
}

.g-bda-userinfo {
  display: flex;
}

.g-bda-userinfo-30 {
  width: 50%;
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.g-bda-userinfo-70 {
  width: 50%;
  padding-top: 25px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.userinfo-avatar {
  width: 90px;
  height: 90px;
  margin: 10px;
  margin-bottom: 1px;
  border-radius: 50%;
  border: 3px solid #aeeeee;
}

.userinfo-nickname {
  color: #5f9ea0;
  font-weight: bold;
}

.userinfo-sign {
  font-size: small;
  margin-top: 10px;
}
/* [假弹框] */
  /** index.wxss模拟弹框 **/
.modal-box {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  top: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 99;
}
 
.modal-content {
  background: #fff;
  width: 600rpx;
  margin: 40% auto 0;
  justify-content: center;
  align-items: center;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  border-bottom: 1px solid #ebebec;
}
 
.content-title {
  height: 100rpx;
  text-align: center;
  font-size: 1.2rem;
  padding-top: 10rpx;
  font-size: 35rpx;
}
 
.content-text {
  padding: 0 50rpx 50rpx;
  color:#ADADAD;
  font-size: 28rpx;
}
 
.modal-btns {
  width: 600rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
}
 .weui-flex {
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  }
  
.dialog-btn {
  border-radius: 0;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  background: #fff;
  height: 100rpx;
  width: 100%;
}
 
.dialog-btn::after {
  border: none;
  border-radius: 0;
}
 
.cancel {
  color: #ccc;
}
 
.confirm {
  border-left: 1px solid #ebebec;
  color: #60d048;
}